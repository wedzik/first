<%= form_for @admin, :url => admin_update_profile_path, remote:true, :html => { :class => 'form-horizontal' } do |f| %>
    <%= bootstrap_flash %>
    <% if @admin.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <% for message in @admin.errors.full_messages %>
              <p><%= message %></p>
          <% end %>
        </div>
    <% end %>
    <div class="form-group">
      <%= f.label :email, :class => 'col-sm-3 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :email, :class => 'text_field form-control',:readonly => true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :first_name, :class => 'col-sm-3 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :first_name, :class => 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, :class => 'col-sm-3 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :last_name, :class => 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :age, :class => 'col-sm-3 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :age, :class => 'text_field form-control' %>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit "Save", :class => 'btn btn-primary' %>
      <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
    </div>
<% end %>