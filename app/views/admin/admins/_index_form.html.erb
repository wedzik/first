<%- model_class = Admin -%>
<div class="section-title">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= link_to 'ID', admin_admins_path(order: 'id', current: @current, direction: @direction), :remote => true, :id => "user-id-header" %></th>
    <th><%= link_to 'Email', admin_admins_path(order: 'email', current: @current, direction: @direction), :remote => true, :id => "user-email-header" %></th>
    <th><%= link_to 'First name', admin_admins_path(order: 'first_name', current: @current, direction: @direction), :remote => true, :id => "user-first_name-header"  %></th>
    <th><%= link_to 'Last name', admin_admins_path(order: 'last_name', current: @current, direction: @direction), :remote => true, :id => "user-last_name-header"  %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.id %></td>
        <td><%= admin.email %></td>
        <td><%= admin.first_name %></td>
        <td><%= admin.last_name %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_admin_path(admin),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
