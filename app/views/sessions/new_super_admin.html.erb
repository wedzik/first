<%- model_class = SuperAdmin -%>
<div class="section-title">
  <h1><%=t '.title', :default => ['Super Admin Log in'], :model => model_class.model_name.human.titleize %></h1>
</div>
<div class="row">
  <div class="col-md-3">
    <%= form_tag log_in_super_admin_path, :class => 'form-horizontal' do %>
        <div class="form-group">
          <%= label_tag :email, nil, class: 'col-sm-3 control-label' %>
          <div class="col-sm-9">
            <%= text_field_tag :email, params[:email], :class => 'text_field form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag :password, nil, class: 'col-sm-3 control-label' %>
          <div class="col-sm-9">
            <%= password_field_tag :password, nil, :class => 'text_field form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= submit_tag "Enter", :class => 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>

