<%= form_tag @form_path, :class => 'form-horizontal' do %>
    <div class="form-group">
      <%= label_tag :email, nil, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= text_field_tag :email, params[:email], :class => 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :password, nil, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= password_field_tag :password, nil, :class => 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= submit_tag "Enter", :class => 'btn btn-primary bnt-right' %>
      </div>
    </div>
<% end %>

