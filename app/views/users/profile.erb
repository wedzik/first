<%- model_class = User -%>
<div class="section-title">
  <h1><%=t '.title', :default => 'Profile' %></h1>
</div>

<div class="panel panel-default">
  <div class="panel-body">Look, I'm in a panel!</div>
</div>

<dl class="dl-horizontal prfile-detail">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @user.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @user.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:age) %>:</strong></dt>
  <dd><%= @user.age %></dd>

<%= form_for @user, :url=>avatar_path, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <% for message in @user.errors.full_messages %>
              <p><%= message %></p>
          <% end %>
        </div>
    <% end %>
    <div class="control-group">
      <%= f.label :avatar, :class => 'control-label' %>
      <div class="controls">
        <%= f.file_field :avatar %>
      </div>
    </div>
    <div class="form-actions  form-action-container">
      <%= f.submit "Save", :class => 'btn btn-primary bnt-right' %>
    </div>
<% end %>
</dl>
<%= image_tag(@user.avatar_url, :class => 'user-avatar-preview') if @user.avatar? %>

<div class="form-actions form-action-container">
  <%= link_to t('.edit', :default => t("Update profile")), update_profile_path(:id => current_user.id),
              {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}, :class => 'btn' %>
</div>
<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<script lang="" >
    $('#modal-window').on('hidden.bs.modal', function () {
        location.reload();
    })
</script>