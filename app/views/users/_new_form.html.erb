<%- model_class = User -%>
<div class="section-title text-center">
  <h1><%=t '.title', :default => [:'helpers.titles.new', 'New %{model}'],
           :model => model_class.model_name.human.titleize %></h1>
</div>
<%= form_for @user, remote:true, :html => { :class => 'form-horizontal' } do |f| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <% for message in @user.errors.full_messages %>
              <p><%= message %></p>
          <% end %>
        </div>
    <% end %>
    <div class="form-group">
      <%= label_tag :email, nil, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :email, :class => 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :password, nil, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.password_field :password, :class => 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :password_confirmation, nil, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, :class => 'text_field form-control' %>
      </div>
    </div>

    <div class="form-group text-center">
      <%= f.submit nil, :class => 'btn btn-primary btn-big' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  root_path, :class => 'btn btn-warning btn-big' %>
    </div>
<% end %>
