<%- model_class = User -%>
<div class="section-title">
  <h1>Reset User password</h1>
</div>
<%= form_for @user, :url => reset_password_path, :html => { :class => 'form-horizontal' } do |f| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <% for message in @user.errors.full_messages %>
              <p><%= message %></p>
          <% end %>
        </div>
    <% end %>
    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password, :class => 'password_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password_confirmation, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password_confirmation, :class => 'password_field' %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary', :value =>'Reset password' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn' %>
    </div>
<% end %>
