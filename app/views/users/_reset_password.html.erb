<div class="modal-dialog">
  <div class="modal-content" >
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="myModalLabel">Reset User password</h4>
    </div>
    <div class="modal-body">
      <%= form_for @user, remote:true, :url => reset_password_path, :html => { :class => 'form-horizontal' } do |f| %>
          <% if @user.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <% for message in @user.errors.full_messages %>
                    <p><%= message %></p>
                <% end %>
              </div>
          <% end %>
          <div class="form-group">
            <%= f.label :email, :class => 'col-sm-3 control-label' %>
            <div class="col-sm-8">
              <%= f.text_field :email, :class => 'text_field form-control',:readonly => true %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password, :class => 'col-sm-3 control-label' %>
            <div class="col-sm-8">
              <%= f.password_field :password, :class => 'text_field form-control'%>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, :class => 'col-sm-3 control-label' %>
            <div class="col-sm-8">
              <%= f.password_field :password_confirmation, :class => 'text_field form-control'%>
            </div>
          </div>
          <div class="form-actions" style="text-align: right">
            <%= f.submit 'Save password', :class => 'btn btn-primary' %>
            <button type="button" class="btn  btn-warning" data-dismiss="modal">Close</button>
          </div>
      <% end %>
    </div>
  </div>
</div>